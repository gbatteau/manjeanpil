<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      
      <div class="text-center">
        <% if params[:plan] == '2' %>
          <h1>Restaurant</h1>
          <p>Sign up to post your daily specials!</p>
        <% else %>
          <h1>New Customer</h1>
          <p>Sign up to get food specials near you.</p>
        <% end %>
      </div>
      
      <div class="well">
        <div class="text-center">
          <h2 style="margin-top: 10px;">Sign Up</h2>
        </div>
        <% if params[:plan] == '2' %>
          <%= render "restaurant_form" %>
        <% else %>
          <%= render "customer_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
      
    </div>
  </div>
</div>
