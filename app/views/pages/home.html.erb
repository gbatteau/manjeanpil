<div class="home-callout text-center container-fluid">

  <div class="well2"style="color: white;">
    <h1>Welcome to Lunchora</h1>
    <h3 style=" margin-top: 10px;">A site where food lovers can find lunch and dinner daily specials posted by local restaurants.</h3>
  </div>

  <nav class="panel">
    <p class="text-uppercase has-text-gray text-center pv1 f6">
      filter by special type
    </p>

    <div class="text-center home-signup-links container-fluid">
      <div class="col-md-12" style="display: flex; justify-content: center; align-items: center; margin-bottom: 15px;">
        <%= link_to 'Lunch', posts_path(special_type: "Lunch"), class: "btn btn-primary", style: "margin-left: 10px; margin-right: 10px;" %>
        <%= link_to 'Happy-Hour', posts_path(special_type: "Happy-Hour"), class: "btn btn-primary", style: "margin-left: 10px; margin-right: 10px;" %>
        <%= link_to 'Dinner', posts_path(special_type: "Dinner"), class: "btn btn-primary", style: "margin-left: 10px; margin-right: 10px;" %>
      </div>
    </div>
  </nav>

<div class="container home-signup-links text-center">
  <div class="row">
    <% if user_signed_in? %>
      <% if current_user.plan_id == 2 %>
      <div class="col-md-6">
        <div class="well">

          <h2 class="text-center"> Your Profile</h2>
          <% end %>
          <% if current_user.profile %>
             <%= link_to "Edit your profile", edit_profile_path(current_user.profile), class: 'btn btn-default btn-lg btn-block' %>
             <%= link_to "View your profile", user_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
             <%= link_to "Post your specials!", new_post_path, class: 'btn btn-default btn-lg btn-block' %>
          <% else %>
          <% if current_user.plan_id == 2 %>
            <%= link_to "Create your profile!", new_profile_path, class: 'btn btn-default btn-lg btn-block' %>
          <% end %>
          <% end %>
        </div>
      </div>

    <% else%>
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center"style="margin-top: 15px;">Food Lovers</h2>
          <h4>Sign up to get food specials near you.</h4>
          <%= link_to "Customer Sign up", new_user_registration_path(plan: @customer_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center"style="margin-top: 15px;">Restaurants</h2>
          <h4>Sign up to post your daily specials.</h4>
          <%= link_to "Restaurant Sign up", new_user_registration_path(plan: @restaurant_plan.id), class: 'btn btn-success btn-lg btn-block' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render partial: 'shared/post_cards', locals: { posts: @posts } %>

