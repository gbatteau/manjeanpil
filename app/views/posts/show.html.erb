<div id="place_longitude">
  <%= @post.longitude %>
</div>

<div id="place_latitude">
  <%= @post.latitude %>
</div>

<div class="page-wrapper post-show">
  <div class="container">
    <div class="well">
      <div class="title"><%= @post.description %></div>

      <div class="metadata">
        <div class="primary-label"><%= @post.special_type %></div>

        <div class="counter-label">
          <div><%= fa_icon "fire" %></div>
          <div><%= @post.impressions_count %></div>
        </div>
      </div>

      <div class="map-wrapper">
        <div id="map"></div>
      </div>
    </div>
  </div>
</div>
