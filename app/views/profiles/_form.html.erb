<%= form_for @profile do |f| %>
  <div class="form-group">
    <%= f.label :restaurant_name %>
    <%= f.text_field :restaurant_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :street %>
    <%= f.text_field :street, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :cuisine %>
    <%= f.text_field :cuisine, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :website %>
    <%= f.text_area :website, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :hours %>
    <%= f.text_area :hours, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.text_area :phone_number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Create Profile", class: 'btn btn-primary' %>
  </div>
<% end %>
